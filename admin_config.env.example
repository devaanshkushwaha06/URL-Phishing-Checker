# Admin Authentication Configuration Template
# ==========================================
# Copy this file to admin_config.env and configure your values
# WARNING: Never commit the actual admin_config.env file!

# Admin Credentials
# -----------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password

# Security Configuration
# ----------------------
ADMIN_TOKEN_SECRET=change-this-jwt-secret-key

# Session Configuration
# ---------------------
ADMIN_SESSION_TIMEOUT=86400

# Rate Limiting Configuration
# ---------------------------
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=15

# Security Features
# -----------------
ENABLE_LOGIN_LOGGING=true
ENABLE_IP_RATE_LIMITING=true
REQUIRE_HTTPS=false

# Admin Dashboard Configuration
# -----------------------------
DASHBOARD_REFRESH_INTERVAL=30
MAX_RECENT_LOGS=100
ENABLE_ADMIN_NOTIFICATIONS=false

# Database Configuration
# ----------------------
ADMIN_LOG_RETENTION_DAYS=30
ENABLE_ADMIN_DATABASE_LOGGING=true

# Advanced Security
# -----------------
ENABLE_2FA=false
ALLOWED_ADMIN_IPS=
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARACTERS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true
{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/style.css",
      "dest": "/frontend/style.css"
    },
    {
      "src": "/script.js",
      "dest": "/frontend/script.js"
    },
    {
      "src": "/admin_login.html",
      "dest": "/frontend/admin_login.html"
    },
    {
      "src": "/admin_dashboard.html",
      "dest": "/frontend/admin_dashboard.html"
    },
    {
      "src": "/",
      "dest": "/frontend/index.html"
    }
  ]
}
{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "VIRUSTOTAL_API_KEY": "@virustotal_api_key"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 10
    }
  },
  "outputDirectory": "frontend"
}
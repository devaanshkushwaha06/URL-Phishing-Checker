# Environment Configuration for AI Phishing Detection System

# ============================================================================
# API CONFIGURATION
# ============================================================================

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_LOG_LEVEL=info

# CORS Configuration (configure for production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://your-frontend-domain.vercel.app"]
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# THREAT INTELLIGENCE APIs
# ============================================================================

# VirusTotal API (Optional - get free key at virustotal.com)
# VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# URLVoid API (Optional)
# URLVOID_API_KEY=your_urlvoid_api_key_here

# ============================================================================
# MACHINE LEARNING CONFIGURATION
# ============================================================================

# Model Configuration
ML_MAX_URL_LENGTH=200
ML_VOCAB_SIZE=10000
ML_BATCH_SIZE=32
ML_EPOCHS=30

# Training Configuration
DATASET_SIZE=5000
VALIDATION_SPLIT=0.2
EARLY_STOPPING_PATIENCE=10

# Retraining Configuration
FEEDBACK_RETRAIN_THRESHOLD=50
AUTO_RETRAIN_ENABLED=true

# ============================================================================
# DATA STORAGE
# ============================================================================

# Dataset Configuration
DATASET_PATH=data/generated_dataset.csv
FEEDBACK_DATASET_PATH=data/feedback_dataset.csv
MODEL_SAVE_PATH=models/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/
SCAN_LOG_MAX_ENTRIES=1000
FEEDBACK_LOG_MAX_ENTRIES=5000

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# API Security
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=60
MAX_URL_LENGTH=2000

# Data Privacy
ANONYMIZE_LOGS=true
DATA_RETENTION_DAYS=90

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Threading & Async
MAX_WORKERS=4
ASYNC_TIMEOUT=30
REQUEST_TIMEOUT=10

# Caching (if implemented)
CACHE_ENABLED=false
CACHE_TTL=300

# ============================================================================
# MONITORING & HEALTH CHECKS
# ============================================================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Metrics Collection
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Database (if extended)
# DATABASE_URL=sqlite:///./phishing_detection.db

# Redis (if extended with caching)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Notification Services (if extended)
# SLACK_WEBHOOK_URL=your_slack_webhook_url
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Feature toggles
ENABLE_VIRUSTOTAL=true
ENABLE_HEURISTIC_ANALYSIS=true
ENABLE_ML_PREDICTION=true
ENABLE_FEEDBACK_LEARNING=true
ENABLE_DETAILED_LOGGING=true

# Advanced Features
ENABLE_BATCH_PROCESSING=false
ENABLE_API_AUTHENTICATION=false
ENABLE_RATE_LIMITING=false

# ============================================================================
# INSTRUCTIONS FOR SETUP
# ============================================================================

# 1. Copy this file to .env in your project root
# 2. Replace placeholder values with your actual configuration
# 3. For production deployment:
#    - Set ENVIRONMENT=production
#    - Set DEBUG=false
#    - Configure proper CORS_ORIGINS
#    - Add secure API keys
#    - Enable authentication if needed
#
# 4. For VirusTotal integration:
#    - Sign up at virustotal.com for free API key
#    - Uncomment VIRUSTOTAL_API_KEY and add your key
#
# 5. For Vercel frontend deployment:
#    - Add your Vercel domain to CORS_ORIGINS
#    - Update API_HOST for production backend URL
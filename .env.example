# Phishing URL Detection System - Environment Configuration Template
# ==================================================================
# Copy this file to .env and configure your values

# VirusTotal API Configuration
# ----------------------------
# Get your free API key from: https://www.virustotal.com/gui/join-us
# This is optional but recommended for enhanced threat detection
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Application Configuration
# -------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Database Configuration (if using database in future)
# ---------------------------------------------------
# DATABASE_URL=sqlite:///phishing_detection.db

# Logging Configuration
# ---------------------
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Machine Learning Configuration
# ------------------------------
MODEL_PATH=models/phishing_model.pkl
MODEL_RETRAIN_INTERVAL=86400
MIN_FEEDBACK_FOR_RETRAIN=100

# Security Configuration
# ----------------------
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Rate Limiting
# -------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# External API Configuration
# --------------------------
# GOOGLE_SAFE_BROWSING_API_KEY=your_google_api_key
# PHISHTANK_API_KEY=your_phishtank_api_key

# Deployment Configuration
# ------------------------
DEPLOYMENT_MODE=development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080